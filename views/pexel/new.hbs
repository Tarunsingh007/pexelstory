
{{> header}}

<div class="container">
    <h1 class="text-center">Add the story to a pexel.</h1>
       <div style="width:30%; margin:25px auto">  
            <form action="/pexel" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" required autofocus>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control rounded-0" id="exampleFormControlTextarea1" rows="5" name="description" placeholder="Add description" required></textarea>
                </div>
                <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a  href="/pexel">Go Back</a>
        </div>
</div>
